#!/usr/bin/env bash
set -e

components=(
  backstage
  contractor
  doorbell
  foundations
  frontdoor
  knock-knock
  ledger
  letterbox
  living
  log-book
  marketing
  neighbourhood
  piggybank
  switchboard
)

for c in "${components[@]}"; do
  cd "$HOME/Code/$c"
  tmux new-session -d -s "$c" -n "server"
  tmux new-window -t "$c:2" -n "editor"
done
