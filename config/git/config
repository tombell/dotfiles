; vim: set ft=gitconfig:

[include]
  path = ~/.config/git/delta-theme

[user]
  name = Tom Bell
  email = tomb@tombell.dev

[alias]
  aa = add --all
  ap = add --patch
  br = branch
  ci = commit
  co = checkout
  cp = cherry-pick
  dc = diff --cached
  di = diff
  l = log --pretty=oneline --abbrev-commit --max-count=15
  ll = log --pretty=colored --abbrev-commit --max-count=25
  lll = log --pretty=graph --graph --abbrev-commit --date=relative
  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  re = restore
  ri = rebase --interactive
  rs = rebase --skip
  st = status -sb

[core]
  autocrlf = input
  excludesfile = ~/.config/git/ignore
  pager = delta

[fetch]
  prune = true

[push]
  default = current

[pull]
  ff = only

[merge]
  conflictStyle = zdiff3

[rebase]
  autosquash = true

[diff]
  wsErrorHighlight = all

[rerere]
  enabled = true

[interactive]
  diffFilter = delta --color-only

[pretty]
  colored = format:%C(yellow)%h%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset
  graph = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[delta]
  navigate = true
  side-by-side = true
  syntax-theme = tokyonight_night

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
