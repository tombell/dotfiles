################################################################################
# Applications
################################################################################

hyper - enter:
  osascript ~/.dotfiles/bin/launch-ghostty.scpt > /dev/null

hyper - b:
  osascript ~/.dotfiles/bin/launch-chrome.scpt > /dev/null

hyper - d:
  osascript ~/.dotfiles/bin/launch-discord.scpt > /dev/null

hyper - e:
  osascript ~/.dotfiles/bin/launch-mail.scpt > /dev/null

hyper - f:
  osascript ~/.dotfiles/bin/launch-finder.scpt > /dev/null

hyper - m:
  osascript ~/.dotfiles/bin/launch-messages.scpt > /dev/null

hyper - n:
  osascript ~/.dotfiles/bin/launch-notes.scpt > /dev/null

hyper - s:
  osascript ~/.dotfiles/bin/launch-spotify.scpt > /dev/null

hyper - t:
  osascript ~/.dotfiles/bin/launch-telegram.scpt > /dev/null

################################################################################
# Home
################################################################################

ctrl + opt - 1:
  shortcuts run "Bedroom"

ctrl + opt - 2:
  shortcuts run "Living Room"

ctrl + opt - 3:
  shortcuts run "Guest Bedroom"

ctrl + opt - 4:
  shortcuts run "All Off"
