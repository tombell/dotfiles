#!/usr/bin/env zsh

alias l="ls -lAh"
alias ll="ls -al"
alias la="ls -A"

alias e="$VISUAL"

# pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

#Â make sure vim runs neovim
alias vim="nvim"

# change into dotfiles directory
alias d="cd ~/.dotfiles"

# homebrew
alias bcu="brew cleanup -s"
alias bl="brew list -1 --formula"
alias blc="brew list -1 --cask"

# cleanup
alias rmds="rm -fr ~/**/.DS_Store"

# find todo comments in code
alias todo="rg -F 'TODO'"

# find and kill a process
alias pk="ps aux | tail -n +2 | fzf -m | awk '{print \$2}' | xargs kill -9"
