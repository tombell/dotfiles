                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Map caps lock to ctrl (hold)/escape (tap)",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [{ "key_code": "left_control" }],
                                "to_if_alone": [{ "key_code": "escape" }],
                                "type": "basic"
                            }
                        ]
                    }
